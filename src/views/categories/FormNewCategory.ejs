<%- include('../partials/head', { title: 'Formulario de Criação de categoria' }) %>
<%- include('../partials/nav-bar') %>

<div class="container mt-5 w-50" style="padding-top: 70px;">
    <br>
    <form action="/categories/save" method="post">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>Crie uma categoria</h2>
                <button type="submit" class="btn btn-success">Criar Categoria</button>
            </div>
            <div class="card-body">
                <input class="form-control" placeholder="Crie aqui uma nova categoria." type="text" name="title" required>
            </div>
        </div>
    </form>
</div>

