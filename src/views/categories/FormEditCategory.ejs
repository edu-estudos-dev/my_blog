<%- include('../partials/head', { title: 'Formulario de atualização de categoria' }) %>
<%- include('../partials/nav-bar') %>

<div class="container mt-5 w-50" style="padding-top: 70px;">
    <br>
    <form action="/categories/update/<%= category.id %>?_method=PUT" method="post">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>Edição de categoria</h2>
                <button type="submit" class="btn btn-success">Atualizar Categoria</button>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" value="<%= category.id %>">
                <input class="form-control" placeholder="Digite aqui a atualização da categoria." type="text"
                    name="title" required value="<%= category.title %>">
            </div>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>
