<!DOCTYPE html>
<html lang="pt-br">
<%- include('../partials/head', { title: category.title }) %>
  <%- include('../partials/nav-bar') %>

    <style>
      .list-group-item {
        transition: all 0.2s;
        border-left: 4px solid transparent;
      }

      .list-group-item:hover {
        transform: translateX(10px);
        border-left-color: #0d6efd;
      }

      .list-group-item h5 {
        color: #333;
      }
    </style>


<div class="container mt-5" style="padding-top: 70px;">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= category.title %></li>
    </ol>
  </nav>
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="display-6 fw-bold mb-4">
        <i class="bi bi-bookmarks me-2"></i>
        Artigos na Categoria: <%= category.title %>
      </h1>

      <% if (category.articles && category.articles.length > 0) { %>
        <div class="list-group">
          <% category.articles.forEach(article => { %>
            <a href="/articles/<%= article.slug %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1"><%= article.title %></h5>
                <small class="text-muted">Publicado em: <%= new Date(article.createdAt).toLocaleDateString('pt-BR') %></small>
              </div>
              <i class="bi bi-arrow-right-short fs-4"></i>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <div class="alert alert-info mt-4">Nenhum artigo encontrado nesta categoria.</div>
      <% } %>

      <div class="mt-4">
        <a href="/articles/table" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-2"></i> Voltar para tabela</a>
      </div>
    </div>
  </div>
</div>

    <%- include('../partials/footer') %>

</html>