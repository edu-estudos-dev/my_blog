<!DOCTYPE html>
<html lang="pt-br">
<%- include('../partials/head', { title: article.title }) %>
    <%- include('../partials/nav-bar') %>

        <div class="container mt-5" style="padding-top: 70px;">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <!-- Cabeçalho do artigo -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="text-muted small">
                            <i class="bi bi-calendar me-1"></i>
                            <%= new Date(article.createdAt).toLocaleDateString('pt-BR', { day: '2-digit' , month: 'long'
                                , year: 'numeric' }) %>
                        </div>
                        <% if (article.category) { %>
                            <a href="/categories/<%= article.category.id %>/articles"
                                class="badge bg-primary text-decoration-none py-2">
                                <i class="bi bi-tag me-1"></i>
                                <%= article.category.title %>
                            </a>
                            <% } %>
                    </div>

                    <!-- Conteúdo principal -->
                    <article class="card border-0 shadow-sm mb-5 p-3">
                        <div class="card-body">
                            <h1 class="display-6 fw-bold mb-4">
                                <%= article.title %>
                            </h1>

                            <div class="article-content fs-5 lh-base">
                                <%- article.body %>
                            </div>
                        </div>

                        <!-- Rodapé do artigo -->
                        <div class="card-footer bg-transparent border-top-0 py-4">
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <a href="/articles/table" class="btn btn-outline-secondary mb-3 mb-md-0">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Voltar para tabela
                                </a>

                                <div class="social-sharing">
                                    <span class="me-2 text-muted">Compartilhar:</span>
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-facebook"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-twitter-x"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-whatsapp"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>

            <style>
                .article-content {
                    font-family: 'Merriweather', serif;
                }

                .article-content img {
                    max-width: 100%;
                    height: auto;
                    margin: 2rem 0;
                    border-radius: 8px;
                    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
                }

                .article-content blockquote {
                    border-left: 4px solid #0d6efd;
                    padding-left: 1.5rem;
                    margin: 1.5rem 0;
                    font-style: italic;
                    color: #6c757d;
                }

                .card {
                    transition: transform 0.2s;
                }

                .card:hover {
                    transform: translateY(-3px);
                }

                @media (max-width: 768px) {
                    .display-5 {
                        font-size: 2rem;
                    }

                    .article-content {
                        font-size: 1rem;
                    }
                }
            </style>

            <!-- Adicione o link para os ícones do Bootstrap -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

</html>